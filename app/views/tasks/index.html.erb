<% if notice %>
  <div class="alert alert-success mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span><%= notice %></span>
  </div>
<% end %>

<% content_for :title, t('tasks.title') %>

<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <div>
      <h1 class="text-3xl sm:text-4xl font-bold"><%= t('tasks.title') %></h1>
      <p class="text-base-content/60 mt-2">
        <%= t('tasks.index.subtitle', count: @tasks.count) %>
      </p>
    </div>
    <%= link_to new_task_path, class: "btn btn-primary gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      <%= t('tasks.new_task') %>
    <% end %>
  </div>

  <!-- Tasks Grid -->
  <% if @tasks.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="tasks">
      <% @tasks.each do |task| %>
        <%= link_to task, class: "group" do %>
          <div class="card bg-base-100 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full border-2 border-transparent hover:border-primary/20">
            <!-- Card Header with Background Color -->
            <div class="relative h-32 flex items-center justify-center overflow-hidden rounded-t-2xl" 
                 style="background: linear-gradient(135deg, <%= task.background || '#6366f1' %> 0%, <%= task.background || '#8b5cf6' %>dd 100%);">
              <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent"></div>
              <div class="text-6xl relative z-10 drop-shadow-lg">
                <%= task.emoji || 'ðŸ“‹' %>
              </div>
              
              <!-- Status Badge -->
              <div class="absolute top-3 right-3">
                <div class="badge <%= case task.status
                  when 'active' then 'badge-success'
                  when 'paused' then 'badge-warning'
                  when 'completed' then 'badge-info'
                  when 'archived' then 'badge-ghost'
                  end %> badge-sm">
                  <%= t("tasks.show.status.#{task.status}") %>
                </div>
              </div>
            </div>
            
            <!-- Card Body -->
            <div class="card-body p-5">
              <h2 class="card-title text-xl mb-2 group-hover:text-primary transition-colors">
                <%= task.name %>
              </h2>
              
              <% if task.slogan.present? %>
                <p class="text-sm text-base-content/60 mb-3 line-clamp-2">
                  <%= task.slogan %>
                </p>
              <% end %>
              
              <!-- Task Details -->
              <div class="space-y-2 mt-auto">
                <% if task.taskable_type == 'NumericalTask' %>
                  <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                    <div class="flex items-center gap-2">
                      <span class="text-2xl">ðŸ“Š</span>
                      <div>
                        <div class="text-xs text-base-content/60"><%= t('tasks.index.current_value') %></div>
                        <div class="text-lg font-bold" style="color: <%= task.background || '#6366f1' %>">
                          <%= number_with_delimiter(task.taskable.value.to_i) %>
                          <% if task.taskable.value_unit.present? %>
                            <span class="text-sm text-base-content/60"><%= task.taskable.value_unit %></span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Mini Progress Indicator -->
                    <% progress = [task.taskable.value.to_i, 100].min %>
                    <div class="radial-progress text-primary" style="--value:<%= progress %>; --size:3rem; --thickness: 3px;" role="progressbar">
                      <span class="text-xs font-bold"><%= progress %>%</span>
                    </div>
                  </div>
                  
                  <!-- Recent Activity Count -->
                  <div class="flex items-center gap-2 text-sm text-base-content/60 px-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                    <%= t('tasks.index.entries_count', count: task.entries.count) %>
                  </div>
                <% else %>
                  <div class="flex items-center gap-2 p-3 bg-base-200 rounded-lg">
                    <span class="text-2xl">ðŸ“‹</span>
                    <div class="text-sm text-base-content/60">
                      <%= task.taskable_type.titleize %>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- View Details Link -->
              <div class="card-actions justify-end mt-4">
                <span class="text-sm text-primary flex items-center gap-1 group-hover:gap-2 transition-all">
                  <%= t('tasks.index.view_details') %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="flex flex-col items-center justify-center py-16 px-4">
      <div class="text-8xl mb-6 opacity-50">ðŸ“‹</div>
      <h2 class="text-2xl font-bold mb-2"><%= t('tasks.no_tasks') %></h2>
      <p class="text-base-content/60 mb-6 text-center max-w-md">
        <%= t('tasks.index.empty_description') %>
      </p>
      <%= link_to new_task_path, class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <%= t('tasks.index.create_first_task') %>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
